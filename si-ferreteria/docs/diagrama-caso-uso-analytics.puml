@startuml
' ============================================================================
' Diagrama de Casos de Uso - Dashboard Analítico
' Sistema de Gestión de Ferretería
' Fecha: 23 de Noviembre, 2025
' ============================================================================

left to right direction
skinparam packageStyle rectangle

actor Administrador

rectangle "Sistema de Gestión de Ferretería" {

  usecase "CU26 - Dashboard\nAnalítico Dinámico" as CU26

  usecase "CU-Ventas\nGestionar Ventas" as CUVentas

  usecase "CU-Productos\nGestionar Productos" as CUProductos

  usecase "CU-Compras\nGestionar Compras" as CUCompras

  usecase "CU-Reportes\nGenerar Reportes" as CUReportes

  usecase "CU-Inventario\nControl de Stock" as CUInventario

  CU26 ..> CUVentas : <<include>>
  CU26 ..> CUProductos : <<include>>
  CU26 ..> CUCompras : <<include>>
  CU26 .> CUReportes : <<extend>>
  CU26 .> CUInventario : <<extend>>
}

Administrador --> CU26

@enduml
